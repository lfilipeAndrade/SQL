-- Inserir tabelas
use cadastro;
create table pessoas(
  id int not null auto_increment,
  nome varchar(30) not null,
  nascimento date,
  sexo enum('M','F'),
  peso decimal(5,2),
  altura decimal(3,2),
  nacionalidade varchar(20) default 'Brasil',
  primary key (id)
) default charset  = utf8;

-- Inserir uma nova coluna
alter table pessoas
add column profissao varchar(10) after nome;
desc pessoas;
